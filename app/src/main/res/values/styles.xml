<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimaryDark">@color/colorBackground</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ComposeDialogTheme" parent="Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="counterText">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
    </style>

</resources>
